nav-bar

form.form(name='form', ng-submit='login(form)', novalidate='')
  .row
    .small-12.columns
      label Email
        input(type='text', name='email', ng-model='user.email')

  .row
    .small-12.columns
      label Password
        input(type='password', name='password', ng-model='user.password')

  .row(ng-show='form.email.$error.required && form.password.$error.required && submitted')
    p.small-12.columns.panel.error Please enter your username and password


  .row
    .small-12.columns
      ul.button-group
        li
          button.button(type='submit') Login
        li
          a.secondary.button(href='/signup') Signup

  .row
    .small-12.columns
      ul.button-group.stack
        li
          a.button(href='', ng-click='loginOauth("facebook")')
            i.fa.fa-facebook
            |  Connect with Facebook

          a.button(href='', ng-click='loginOauth("google")')
            i.fa.fa-google-plus
            |  Connect with Google+
          a.button(href='', ng-click='loginOauth("twitter")')
            i.fa.fa-twitter
            |  Connect with Twitter
