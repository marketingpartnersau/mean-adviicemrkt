nav-bar

.row
	.small-12.columns
		h2 Join adviicemrkt

	.small-12.columns
		form.form(name='form', ng-submit='register(form)', novalidate='')
			div
				label(for='name') Name
				input(type='text', name='name', ng-model='user.name', required='')
				p.alert(ng-show='form.name.$error.required && submitted')
					| A name is required
			
			div
				label(for='email') Email
				input(type='text', name='name', ng-model='user.name', required='')
				p.alert(ng-show='form.email.$error.email && submitted')
					| Doesn't look like a valid email.
				p.alert(ng-show='form.email.$error.required && submitted')
					| What's your email address?
				p.alert(ng-show='form.email.$error.mongoose')
					| {{ errors.email }}

			div
				label(for='password') Password
				input(type='password', name='password', ng-model='user.password', ng-minlength='3', required='', mongoose-error='')
				p.alert(ng-show='(form.password.$error.minlength || form.password.$error.required) && submitted')
					| Password must be at least 3 characters.
				p.alert(ng-show='form.password.$error.mongoose')
					| {{ errors.password }}

			div
				button(type='submit') Register

			hr

			div
				a.button(href='', ng-click='loginOauth("facebook")')
					i.fa.fa-facebook
					|  Connect with Facebook
				= ' '
				a.button(href='', ng-click='loginOauth("twitter")')
					i.fa.fa-twitter
					|  Connect with Twitter